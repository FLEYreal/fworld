{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "emitDeclarationOnly": false,
    "useDefineForClassFields": false
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
